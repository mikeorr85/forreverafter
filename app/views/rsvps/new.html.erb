<% content_for :footer_javascript do  %>
  <%= javascript_include_tag "rsvp" %>
<% end %>

<div class="container top30">
  <div class="row">
    <div class="col-xs-12">
      <h2>RSVP</h2>
    </div>
  </div>

  <div id="inviteJumbotron" class="jumbotron invite-lookup">
    <div class="row">
      <div class="col-xs-12 col-sm-12">
        <form>
          <div class="form-group">
            <label for="lastName">Last Name</label>
            <input type="text" class="form-control" id="lastName" placeholder="Johnson">
          </div>
          <div class="form-group">
            <label for="inviteCode">Invite Code</label>
            <input type="text" class="form-control" id="inviteCode" placeholder="XD29J3ND">
          </div>
          <button type="submit" id="startRsvpBtn" class="btn btn-lg btn-primary">Start RSVP</button>
        </form>
      </div>
    </div>
  </div>

  <div id="rsvpJumbotron" class="jumbotron rsvp hidden">
    <div class="row">
      <div class="col-xs-12 col-sm-12">
        <%= form_for @rsvp, url: {action: "create"} do |f| %>
          <%= f.hidden_field :invite_id, id: "inviteId" %>

          <h3 id="guestName">Guest Name</h3>

          <div class="form-group">
            <%= f.label :guest_count, "Total Guests" %>
            <%= f.number_field :guest_count %>
          </div>

          <p class="bold small-text">Please complete the RSVP with 0 if you are unable to make it.</p>

          <%= f.submit "Complete RSVP", class: "btn btn-lg btn-danger bold" %>

        <% end %>
      </div>
    </div>
  </div>

</div>